{
    "cucumber": {
        "format": [ "progress" ],
        "parallel": 3
    },
    "debug": false,
    "paths": {
        "logs": "./logs"
    },
    "watch": {
        "paths": [
            "./features",
            "./modules/@specify-bdd/specify/dist",
            "./modules/@specify-bdd/plugin-cli/dist",
            "./modules/@specify-bdd/quick-ref/dist"
        ],
        "ignore": [
            "\\/logs\\/",
            "\\.test\\.ts$",
            "\\.spec\\.ts$",
            "__tests__",
            "__mocks__",
            "\\.d\\.ts$",
            "\\/node_modules\\/",
            "\\.git",
            "\\.ts$"
        ]
    },
    "plugins": [ "@specify-bdd/plugin-cli" ]
}
