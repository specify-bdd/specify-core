{
  "name": "@specify-bdd/specify",
  "version": "0.0.1",
  "description": "An open-source, command-line testing tool based on Cucumber.js, built to support and streamline Behavior-Driven Development (BDD).",
  "type": "module",
  "contributors": [
    "Adam Lacoste",
    "Michael Brown",
    "Wild Love"
  ],
  "license": "MIT",
  "main": "dist/main.js",
  "bin": {
    "specify": "bin/specify.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias --resolve-full-paths",
    "docs:html": "typedoc --options typedoc.html.json",
    "docs:markdown": "typedoc --options typedoc.markdown.json",
    "generate-types": "tsx ./scripts/generate-types.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@specify-bdd/quick-ref": "workspace:*",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "deepmerge": "^4.3.1",
    "globby": "^14.1.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "serialize-error": "^12.0.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/resolve": "^1.20.6",
    "ts-morph": "^25.0.1",
    "tsc-alias": "^1.8.16",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/specify-bdd/specify-core.git"
  },
  "bugs": {
    "url": "https://github.com/specify-bdd/specify-core/issues"
  },
  "homepage": "https://github.com/specify-bdd/specify-core#readme",
  "engines": {
    "node": ">=22.0.0"
  }
}
